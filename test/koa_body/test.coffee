app= require '../../demos/koa_body/simple'
fs= require 'fs'
request= require('supertest').agent(app.listen())

ct= 'multipart/form-data; boundary=---------------------------paZqsnEHRufoShdX6fh0lUhXBP4k'
body= [
    '-----------------------------paZqsnEHRufoShdX6fh0lUhXBP4k',
    'Content-Disposition: form-data; name="file_name_0"',
    '',
    'super alpha file',
    '-----------------------------paZqsnEHRufoShdX6fh0lUhXBP4k',
    'Content-Disposition: form-data; name="file_name_1"',
    '',
    'super beta file',
    '-----------------------------paZqsnEHRufoShdX6fh0lUhXBP4k',
    'Content-Disposition: form-data; name="upload_file_0"; filename="1k_a.dat"',
    'Content-Type: application/octet-stream',
    '',
    '',
    '-----------------------------paZqsnEHRufoShdX6fh0lUhXBP4k',
    'Content-Disposition: form-data; name="upload_file_1"; filename="1k_b.dat"',
    'Content-Type: application/octet-stream',
    '',
    '',
    '-----------------------------paZqsnEHRufoShdX6fh0lUhXBP4k--'
].join('\r\n')

describe 'Multipart Files', ->
    it 'should store all the files', (done)->
        request
        .post '/'
        .set 'Content-Type', ct
        .send body
        .end (err, res)->
            if err then return done(err)
            files= res.body.files
            Object.keys(files).length.should.be.exactly(2)
            done()